<Crazy>
    testlabel: testlabel
    MDScreen:
        MDBottomNavigation:
            use_text: False
            md_bg_color: app.theme_cls.primary_color
            selected_color_background: "#0A2647" if app.theme_cls.theme_style == "Dark" else "93bfcf"

            MDBottomNavigationItem:
                name: 'scaffold'
                icon: 'icons/scaffold.png'
                badge_icon: "numeric-10"

            MDBottomNavigationItem:
                name: 'camera'
                icon: 'icons/loup.png'
                badge_icon: "numeric-5"

                MDBoxLayout:
                    orientation: "vertical"
                    # Hamburger button
                    MDScreenManager:
                        MDScreen:
                            MDIconButton:
                                icon: "menu"
                                icon_size: "32sp"
                                pos_hint: {"top": 1, "right": 1}
                                theme_icon_color: "Custom"
                                text_color: "#2C74B3"
                                on_press: nav_drawer.set_state("open")
                    MDLabel:
                        id: testlabel
                        text: "Hello World"
                        font_size: 64

                    MDRectangleFlatButton:
                        text: "Click me"
                        font_size: 32
                        size: 200, 100
                        on_press: root.do_something()

            MDBottomNavigationItem:
                name: 'settings'
                icon: 'icons/settings.png'
                MDLabel:
                    text: 'Insert settings'
                MDSwitch:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    active: True
                    on_active: app.theme_switch()
                    widget_style: "ios"

        # Hamburger pop out menu
        MDNavigationDrawer:
            id: nav_drawer
            radius: (16, 0, 0, 16)
            anchor: "right"
            MDNavigationDrawerMenu:
                MDNavigationDrawerHeader:
                    title: "Header title"
                    title_color: "#4a4939"
                    text: "Header text"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Mail"

                MDNavigationDrawerItem:
                    icon: "gmail"
                    theme_icon_color: "Secondary"
                    right_text: "+99"
                    text_right_color: "#4a4939"
                    text: "Inbox"

                MDNavigationDrawerItem:
                    icon: "send"
                    theme_icon_color: "Primary"
                    text: "Outbox"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Labels"
