<MainWindow>
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    tab_pos: 'bottom_mid'
    bg_color: (1, 1, 1, 1)
    TabbedPanelHeader:
        background_normal: (1, 1, 1, 1)
        background_down: 'icons/scaffold.png'
    TabbedPanelItem:
        canvas:
            Rectangle:
                source: 'icons/scaffold.png'
                pos: [self.x + 35, self.y + 5]
                size: [35, 35]
        BoxLayout:
            orientation: "vertical"
            Image:
                source: "icons/scaffold.png"
                size: self.texture_size
            Button:
                text: "Click me"
                font_size: "32"
    TabbedPanelItem:
        bg_color: (1, 1, 1, 1)
        canvas:
            Rectangle:
                source: 'icons/settings.png'
                pos: [self.x + 35, self.y + 5]
                size: [35, 35]
        BoxLayout:
            orientation: "vertical"
            padding: 50
            spacing: 100
            size_hint: [.9, .5]
            pos_hint: { 'top' : .95, 'right': .95}

            Label:
                text: 'Enter the IP of the Grabber'
                pos_hint: {'center_x': 0.5}
                size_hint: 0.5, 0.05

            TextInput:
                id: input
                hint_text:'Enter the IP.. '
                pos_hint: {'center_x': 0.5}
                size: 150, 50
                size_hint: 0.5, None



